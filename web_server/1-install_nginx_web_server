# SetUp Process for Nginx on a server

apt-get -y update
apt-get -y install nginx
ufw enable
ufw allow 'Nginx HTTP'
ufw allow 'OpenSSH'

echo "Holberton School" | tee /var/www/html/index.nginx-debian.html > /var/www/html/index.html

